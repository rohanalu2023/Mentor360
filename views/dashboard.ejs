<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1 {
            color: #007BFF;
            /* Blue color */
        }

        label,
        select,
        input,
        textarea {
            margin-bottom: 10px;
        }

        button {
            background-color: #007BFF;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #0056b3;
            /* Darker blue on hover */
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
        }


        form input,
        form select,
        form textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        form button[type="submit"] {
            width: auto;
            padding: 10px 20px;
        }

        form button[type="submit"]:hover {
            background-color: #0056b3;
            /* Darker blue on hover */
        }
    </style>
</head>

<body>
    <div style="text-align: center;">
        <h1>Mentor360</h1>

        <!-- Filter by Category -->
        <label for="category">Filter by Category:</label>
        <select id="category">
            <option value="All">All</option>
            <option value="Career Advice">Career Advice</option>
            <option value="Resume Review">Resume Review</option>
            <option value="Mock Interview">Mock Interview</option>
        </select>

        <!-- Search Button -->
        <input type="text" id="search" placeholder="Search...">
        <button onclick="filterContent()">Search</button>
    </div>

    <div style="text-align: right; margin-bottom: 10px;">
        <button
            style="background-color: #007BFF; color: #fff; border: none; padding: 10px 20px; cursor: pointer; border-radius: 5px; transition: background-color 0.3s;"
            onclick="logout()">Logout</button>
    </div>


    <!-- List of Coaching/Mentoring Opportunities -->
    <ul id="opportunityList">
        <% content.forEach(item=> { %>
            <li style="display: flex; align-items: center;">
                <div style="flex-shrink: 0;">
                    <img src="<%= item.pictureUrl %>" alt="Opportunity Image" style="max-width: 200px; height: 250px;">
                </div>
                <div style="flex-grow: 1; padding-left: 10px;">
                    <h3 style="color: blue;">
                        <%= item.title %>
                    </h3>
                    <p>Category: <%= item.category %>
                    </p>
                    <p>Description: <%= item.description %>
                    </p>
                    <p>Contact Name: <%= item.name %>
                    </p>
                    <p>Contact Email: <%= item.email %>
                    </p>
                    <p>Contact Phone: <%= item.phone %>
                    </p>
                </div>
                <div>
                    <button onclick="editOpportunity('<%= item._id %>')">Edit</button>
                    <button onclick="deleteOpportunity('<%= item._id %>')">Delete</button>
                </div>
            </li>
            <% }); %>
    </ul>


    <!-- Add New Opportunity Form -->
    <h2>Add New Opportunity</h2>
    <form id="addOpportunityForm" action="/dashboard/add" method="POST">
        <input type="text" name="title" placeholder="Title" required><br>
        <select name="category" required>
            <option value="Career Advice">Career Advice</option>
            <option value="Resume Review">Resume Review</option>
            <option value="Mock Interview">Mock Interview</option>
        </select><br>
        <textarea name="description" placeholder="Description" required></textarea><br>
        <input type="text" name="name" placeholder="Contact Name" required><br>
        <input type="email" name="email" placeholder="Contact Email" required><br>
        <input type="tel" name="phone" placeholder="Contact Phone" required><br>
        <input type="url" name="pictureUrl" placeholder="Picture URL" required><br>
        <button type="submit">Add Opportunity</button>
    </form>


    <!-- JavaScript for Filtering and CRUD Operations -->
    <script>

        function logout() {
            window.location.href = '/welcome';
        }


        function filterContent() {
            const category = document.getElementById('category').value;
            const search = document.getElementById('search').value.toLowerCase();
            const opportunityList = document.getElementById('opportunityList');
            const opportunities = opportunityList.querySelectorAll('li');

            opportunities.forEach(opportunity => {
                const categoryMatch = (category === 'All' || opportunity.querySelector('p:nth-child(2)').textContent.includes(category));
                const searchMatch = opportunity.textContent.toLowerCase().includes(search);

                if (categoryMatch && searchMatch) {
                    opportunity.style.display = 'flex';
                } else {
                    opportunity.style.display = 'none';
                }
            });
        }

        //edit opportunity
        function editOpportunity(id) {
            window.location.href = `/dashboard/edit/${id}`;
        }

        

        // delete logics


        function deleteOpportunity(id, userType) {
    if (userType === 'admin') {
        const confirmation = confirm('Are you sure you want to delete this opportunity?');

        if (confirmation) {
            fetch(`/dashboard/delete/${id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(response => {
                    if (response.ok) {
                        alert('Opportunity deleted successfully.');
                        window.location.reload(); // Reload the page to reflect changes
                    } else {
                        alert('Error deleting opportunity. Please try again later.');
                    }
                })
                .catch(error => console.error('Error:', error));
        }
    } else {
        alert('Warning: You are not authorized to delete. Admin access required! Thanks');
    }
}






    </script>
</body>

</html>