<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="path/to/your/font-awesome/css">
  <style>
    .navbar {
      background-color: #007BFF;
      color: #fff;
      padding: 10px;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 1000;
    }

    body {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
      background-color: #f8f9fa;
    }

    /* Footer styles */
    footer {
        background-color: #007BFF;
        color: #fff;
        padding: 10px;
        width: 100%;
        text-align: center;
        position: fixed;
        bottom: 0;
        left: 0;
    }
    .login-button {
      background-color: #ADD8E6;
      /* Light blue */
      border-color: #ADD8E6;
    }

    .login-button:hover {
      background-color: #007BFF;
      /* Darker blue on hover */
      border-color: #007BFF;
    }

    button {
        background-color: #007BFF;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    button:hover {
        background-color: #0056b3;
        /* Darker blue on hover */
    }

    #nav-logo {
    width: 50px; /* Adjust this value to change the size of the logo */
    height: auto; /* This will maintain the aspect ratio of the logo */
    margin-right: 10px;
}

.navbar li {
    font-size: 14px; /* Adjust this value to change the size of the text in the li elements */
}

.logo {
    display: block;
    margin: 0 auto;
    width: 250px; /* Adjust this value to change the size of the logo */
    text-align: center;
  }

  .container {
    margin-top: -125px;
  }


  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar">
    <div class="container-fluid">
      <div class="logo-and-brand" style="display: flex; align-items: center;">
        <img id="nav-logo" src="https://www.mentor360.com/wp-content/themes/mentor/dist/images/mentor_roundal.png">
        <a class="navbar-brand" href="#" style="font-weight: bolder; color: white; font-size:x-large;">Mentor360</a>
        </div>
      <!--About Us button-->
            <button onclick="aboutus()" style="background-color: white; 
            color: #007BFF;
            font-weight: bold;"
      onmouseover="this.style.backgroundColor='#0056b3'; this.style.color='#fff';"
      onmouseout="this.style.backgroundColor='white'; this.style.color='#007BFF';">
      About Us
      </button>
      
    </div>
  </nav>

  <div class="container">

  <img class="logo" src="https://www.mentor360.com/wp-content/themes/mentor/dist/images/mentor_roundal.png">

  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
        <%- include('partials/messages') %>
          <form action="/users/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" />
            </div>
            <div class="form-group">
              <label for="userType">User Type</label>
              <select class="form-control" id="userType" name="userType">
                <option value="student">Student</option>
                <option value="admin">Admin</option>
              </select>
            </div>

            <button type="submit" class="btn btn-primary btn-block login-button">Login</button>
          </form>
          <p class="lead mt-4">
            No Account? <a href="/users/register">Register</a>

          </div>

            <!-- Footer -->
    <footer>
      <p>Contact us at: r.jankee@alustendent.com</p>
      <p>&copy; 2023 Mentor360. All rights reserved.</p>
  </footer>

  <script>
    //redirect to About Us
    function aboutus() {
    window.location.href = '/views/aboutUs-nobackbtn';
}
</script>