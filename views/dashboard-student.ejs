<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: #007BFF;
        /* Blue color */
    }

    h2 {
        color: #007BFF;
        /* Blue color */
        text-align: center;
    }

    label,
    select,
    input,
    textarea {
        margin-bottom: 10px;
    }

    button {
        background-color: #007BFF;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    button:hover {
        background-color: #0056b3;
        /* Darker blue on hover */
    }

    ul {
        list-style: none;
        padding: 0;
    }

    li {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 10px;
    }

    form input,
    form select,
    form textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    form button[type="submit"] {
        width: auto;
        padding: 10px 20px;
    }

    form button[type="submit"]:hover {
        background-color: #0056b3;
        /* Darker blue on hover */
    }

    /* Updated styles for navbar */
    .navbar {
        background-color: #007BFF;
        color: #fff;
        padding: 10px;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
    }

    .container-fluid {
        display: flex;
        justify-content: space-between;
        margin-left: auto;

    }

    .filter-search {
        display: flex;
        gap: 10px;
        margin-left: auto;
        height: 50px;

    }

    .filter-search select,
    .filter-search input {
        margin-bottom: 0;
        height: 100%;
        /* Set height to 100% */
        border-radius: 5px;
        padding: 10px;
        box-sizing: border-box;
        margin-left: auto;
    }



    .search-container {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .search-container input {
        width: 300px;
        /* Adjust the width as needed */
        margin-left: auto;
    }

    .apply-button {
        background-color: #fff;
        font-weight: bold;
        color: #0056b3;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .apply-button:hover {
        background-color: #0056b3;
        /* Darker blue on hover */
        color: #fff;
    }

    .logout-btn {
        margin-left: auto;
        font-weight: bold;
        border: none;
        cursor: pointer;
        border-radius: 5px;
    }



    /* Additional styling for responsiveness */
    @media (max-width: 768px) {
        .container-fluid {
            flex-direction: column;
            align-items: stretch;
        }

        .filter-search,
        .logout-btn {
            margin-top: 10px;
        }
    }

    #opportunityList {
        box-sizing: border-box;
        padding-bottom: 150px;

    }


    /* Footer styles */
    footer {
        background-color: #007BFF;
        color: #fff;
        padding: 10px;
        width: 100%;
        text-align: center;
        position: fixed;
        bottom: 0;
        left: 0;
    }

    .smalltext{
        text-align: center;

    }

    #nav-logo {
    width: 50px; /* Adjust this value to change the size of the logo */
    height: auto; /* This will maintain the aspect ratio of the logo */
    margin-right: 10px;
}

.navbar li {
    font-size: 14px; /* Adjust this value to change the size of the text in the li elements */
}



</style>

<body>
    <nav class="navbar">
        <div class="container-fluid">
            <div class="logo-and-brand" style="display: flex; align-items: center;">
                <img id="nav-logo" src="https://www.mentor360.com/wp-content/themes/mentor/dist/images/mentor_roundal.png">
                <a class="navbar-brand" href="#" style="font-weight: bolder; color: white; font-size:x-large;">Mentor360</a>
                </div>
            <div class="filter-search">
                <!-- Filter by Category -->
                <select id="category">
                    <option value="All">All Categories</option>
                    <option value="Career Advice">Career Advice</option>
                    <option value="Resume Review">Resume Review</option>
                    <option value="Mock Interview">Mock Interview</option>
                </select>

                

                <!-- Search Input with Apply Button -->
                <div class="search-container">
                    <input type="text" id="search" placeholder="Input Keyword...">
                    <button class="apply-button" onclick="filterContent()">Apply</button>
                </div>

            </div>
            <div class="logout-btn">

                <!--About Us button-->
                <button onclick="aboutus()" style="background-color: white; 
                            color: #007BFF;
                            font-weight: bold;"
                    onmouseover="this.style.backgroundColor='#0056b3'; this.style.color='#fff';"
                    onmouseout="this.style.backgroundColor='white'; this.style.color='#007BFF';">
                    About Us
                </button>

                <button onclick="logout()" style="background-color: white; 
                            color: #007BFF;
                            font-weight: bold;"
                    onmouseover="this.style.backgroundColor='#0056b3'; this.style.color='#fff';"
                    onmouseout="this.style.backgroundColor='white'; this.style.color='#007BFF';">
                    Logout
                </button>
            </div>

        </div>
    </nav>

    <!-- Carousel -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="https://www.fastcompany.co.za/wp-content/uploads/2023/03/NVgUOIy1rqQzR9Ta1oBtCc3R37Q-820x460.png">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="https://elearningindustry.com/wp-content/uploads/2021/07/Image-820x460-9.jpg">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="https://cargoandfreights.com/wp-content/uploads/2023/11/eLearning-Strategies-For-Recruiting-And-Retaining-Truck-Drivers-820x460.webp" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
<br>
      <h2>Mentorship Opportunities Available:</h2>
      <p class="smalltext">Use Filter and Search bar above to browse results</p>
    

    <!-- List of Coaching/Mentoring Opportunities -->
    <ul id="opportunityList">
        <% content.forEach(item=> { %>
            <li style="display: flex; align-items: center; margin-top: 25px;">
                <div style="flex-shrink: 0;">
                    <img src="<%= item.pictureUrl %>" alt="Opportunity Image" style="max-width: 200px; height: 250px;">
                </div>
                <div style="flex-grow: 1; padding-left: 10px;">
                    <h3 style="color: blue;">
                        <%= item.title %>
                    </h3>
                    <p>Category: <%= item.category %>
                    </p>
                    <p>Description: <%= item.description %>
                    </p>
                    <p>Contact Name: <%= item.name %>
                    </p>
                    <p>Contact Email: <%= item.email %>
                    </p>
                    <p>Contact Phone: <%= item.phone %>
                    </p>
                </div>
                <div>
                    <button id="applyButton" onclick="openApplyModal()">Apply for this Opportunity</button>
                </div>
            </li>
            <% }); %>
    </ul>


    <!-- Footer -->
    <footer>
        <p>Contact us at: r.jankee@alustudent.com</p>
        <p>&copy; 2023 Mentor360. All rights reserved.</p>
    </footer>

<!-- Modal for Apply Form -->
<div id="applyModal" class="modal" style="display: none; justify-content: center; align-items: center; height: 100vh;">
    <div class="modal-content" style="border: 1px solid #000; box-shadow: 0 0 10px rgba(0,0,0,0.5); padding: 20px; width: 50%; max-width: 500px; aspect-ratio: 1;">
        <span class="close" onclick="closeApplyModal()">&times;</span>
        <h2>Apply for this Opportunity</h2>
        <form id="applyForm">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>

            <label for="contact">Contact Detail:</label>
            <input type="text" id="contact" name="contact" required>

            <label for="studentId">Student ID:</label>
            <input type="text" id="studentId" name="studentId" required>

            <button type="button" onclick="submitApplication()" style="display: block; margin: 0 auto;">Submit</button>
        </form>
    </div>
</div>

    <!-- JavaScript for Filtering and CRUD Operations -->
    <script>

        // Logout function
        function logout() {
            fetch('/logout', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
                .then(response => {
                    if (response.ok) {
                        // Redirect to the login page after successful logout
                        window.location.href = '/users/login';
                    } else {
                        // Handle error if needed
                        console.error('Error:', response.statusText);
                    }
                })
                .catch(error => console.error('Error:', error));
        }


        function filterContent() {
            const category = document.getElementById('category').value;
            const search = document.getElementById('search').value.toLowerCase();
            const opportunityList = document.getElementById('opportunityList');
            const opportunities = opportunityList.querySelectorAll('li');

            opportunities.forEach(opportunity => {
                const categoryMatch = (category === 'All' || opportunity.querySelector('p:nth-child(2)').textContent.includes(category));
                const searchMatch = opportunity.textContent.toLowerCase().includes(search);

                if (categoryMatch && searchMatch) {
                    opportunity.style.display = 'flex';
                } else {
                    opportunity.style.display = 'none';
                }
            });
        }

// Function to open the Apply Button
document.getElementById('applyButton').addEventListener('click', function() {
    document.getElementById('applyModal').style.display = 'flex';
});

        // Function to open the Apply Modal
    function openApplyModal() {
        const applyModal = document.getElementById('applyModal');
        applyModal.style.display = 'block';
    }

    // Function to close the Apply Modal
    function closeApplyModal() {
        const applyModal = document.getElementById('applyModal');
        applyModal.style.display = 'none';
    }

    // Function to submit the application (you can customize this based on your needs)
    function submitApplication() {
        // Add your logic here to handle the form submission
        // You can use AJAX or fetch to send the form data to the server
        // After successful submission, you can close the modal or show a success message
        // Example:
        alert('Application submitted successfully!');
        closeApplyModal();
    }

    // Event listener to open the Apply Modal when the button is clicked
    document.querySelectorAll('.apply-button').forEach(button => {
        button.addEventListener('click', openApplyModal);
    });

        //redirect to About Us
        function aboutus() {
        window.location.href = '/views/aboutUs-student';
    }

    </script>




</body>


</html>