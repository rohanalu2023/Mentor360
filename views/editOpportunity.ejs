<!-- Edit Opportunity Form -->
<div style="text-align: center;">
    <h1 style="color: #007BFF; margin-bottom: 20px;">Edit Opportunity</h1>
    <form id="editOpportunityForm" action="/dashboard/edit/<%= content._id %>" method="POST">
        <!-- Add input fields for editing -->
        <input type="text" name="title" placeholder="Title" value="<%= content.title %>" required style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; margin-bottom: 10px;"><br>
        <select name="category" required style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; margin-bottom: 10px;">
            <option value="Career Advice" <%= content.category === 'Career Advice' ? 'selected' : '' %>>Career Advice</option>
            <option value="Resume Review" <%= content.category === 'Resume Review' ? 'selected' : '' %>>Resume Review</option>
            <option value="Mock Interview" <%= content.category === 'Mock Interview' ? 'selected' : '' %>>Mock Interview</option>
        </select><br>
        <textarea name="description" placeholder="Description" required style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; margin-bottom: 10px;"><%= content.description %></textarea><br>
        <input type="text" name="name" placeholder="Contact Name" value="<%= content.name %>" required style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; margin-bottom: 10px;"><br>
        <input type="email" name="email" placeholder="Contact Email" value="<%= content.email %>" required style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; margin-bottom: 10px;"><br>
        <input type="tel" name="phone" placeholder="Contact Phone" value="<%= content.phone %>" required style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; margin-bottom: 10px;"><br>
        <input type="url" name="pictureUrl" placeholder="Picture URL" value="<%= content.pictureUrl %>" required style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; margin-bottom: 20px;"><br>
        <button style="background-color: #007BFF; color: #fff; border: none; padding: 10px 20px; cursor: pointer; border-radius: 5px; transition: background-color 0.3s;" type="submit">Save Changes</button>
    </form>
</div>

